[user]
	name = Jyrki Lilja
	email = jyrki@jlilja.net
	signingkey = 0x41651A50ECEF33D8
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	autocrlf = input
	savecrlf = true
	editor = vim
	excludesFile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
	default = simple
[alias]
	lg = log --oneline --abbrev-commit --graph --decorate --color --date-order
	lgb = !git lg --all
	up = "!git remote update -p; git merge --ff-only @{u}"
	nomerge = merge --no-commit --no-ff
	ignore = !git update-index --assume-unchanged
	unignore = !git update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep ^[a-z]
	patch = !git --no-pager diff --no-color
	restore = !git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"
	merge-upstream = merge --ff-only @{u}
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckobjects = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
[submodule]
	fetchJobs = 4
[commit]
	verbose = true
